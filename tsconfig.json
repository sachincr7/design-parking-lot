{
    "compilerOptions": {
      "target": "es6",                    // Target ECMAScript version
      "module": "commonjs",               // Module system (Node.js uses commonjs)
      "outDir": "./dist",                 // Output directory for compiled JavaScript
      "rootDir": "src",                 // Source directory for TypeScript files
      "strict": true,                     // Enable strict type-checking
      "esModuleInterop": true             // Enable compatibility with CommonJS modules
    },
    "exclude": [
      "node_modules"                     // Exclude node_modules from compilation
    ]
  }
  